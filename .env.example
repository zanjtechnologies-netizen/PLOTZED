# ========================================
# Plotzed Environment Variables
# ========================================

# Database
DATABASE_URL="xxxxxxxxxxxxxx"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# ========================================
# Cloudflare R2 (File Storage)
# ========================================
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET="plotzed-storage"
R2_ACCOUNT_ID="your-account-id"

# Razorpay (Payments)
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-webhook-secret"

# Upstash Redis (Rate Limiting & Caching - Optional)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Email Service (Nodemailer SMTP - Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@plotzed.com"
ADMIN_EMAIL="admin@plotzed.com"

# SMS Service (Optional - Deprecated, use WhatsApp instead)
SMS_PROVIDER="msg91"
SMS_API_KEY="your-sms-api-key"
MSG91_AUTH_KEY="your-msg91-auth-key"
MSG91_SENDER_ID="PLOTZD"

# WhatsApp Business API (Recommended - Meta/Facebook Cloud API)
# Get started: https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
WHATSAPP_ENABLED="false"  # Set to "true" to enable WhatsApp notifications
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"  # From Meta Business Manager
WHATSAPP_ACCESS_TOKEN="your-permanent-access-token"  # System user access token
WHATSAPP_BUSINESS_ACCOUNT_ID="your-business-account-id"  # Optional
WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"  # Optional for webhooks

# Sentry (Error Tracking - Optional)
SENTRY_DSN="https://your-key@o123456.ingest.sentry.io/123456"
NEXT_PUBLIC_SENTRY_DSN="https://your-key@o123456.ingest.sentry.io/123456"

# ========================================
# Database Backups (Production)
# ========================================
# S3-compatible bucket for storing backups (AWS S3, Cloudflare R2, etc.)
BACKUP_S3_BUCKET="plotzed-backups"

# Email to notify on backup success/failure
BACKUP_NOTIFICATION_EMAIL="admin@plotzed.com"

# Cron secret for securing backup endpoints (generate with: openssl rand -base64 32)
CRON_SECRET="your-cron-secret-key"
